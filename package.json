{
  "name": "@dimerapp/fs-client",
  "version": "2.0.1",
  "description": "The file system client for Dimer offers the API to convert the docs into a tree of versions and docs content",
  "main": "src/FsClient.js",
  "files": [
    "src"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "commit": "git-cz",
    "test:win": "node ./node_modules/japa-cli/index.js",
    "lint": "standard"
  },
  "keywords": [
    "dimer"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^1.0.14",
    "@dimerapp/context": "^2.0.0",
    "commitizen": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^7.0.0",
    "is-ci": "^1.2.1",
    "japa": "^2.0.4",
    "japa-cli": "^1.0.1",
    "mrm": "^1.2.1",
    "pkg-ok": "^2.3.1",
    "standard": "^12.0.1",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "test"
    ]
  },
  "dependencies": {
    "@dimerapp/dfile": "^1.1.3",
    "chokidar": "^2.0.4",
    "debug": "^4.1.0",
    "klaw": "^3.0.0",
    "ow": "^0.7.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimerapp/fs-client.git"
  },
  "bugs": {
    "url": "https://github.com/dimerapp/fs-client/issues"
  },
  "homepage": "https://github.com/dimerapp/fs-client#readme",
  "gitHooks": {
    "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
  }
}
